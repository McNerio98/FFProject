	<queryString>
		<![CDATA[SELECT 
	a.FormaPago,COUNT(b.idFactura) as Factura, SUM(b.NumUnidades) as NumeroProducto, SUM(b.NumUnidades*c.PrecioComun)TotalPago, a.idCliente as IdCliente
FROM VentaFactura a inner join Comprador d on(d.DUI = a.idCliente), DetalleProductoEnFactura b, Producto c
WHERE
	a.idCliente = $P{Identificacion}
	AND a.idVentaFactura = b.idFactura
	AND b.idProducto = c.idProducto
GROUP BY a.FormaPago,a.idCliente
;]]>
	</queryString>
