<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletPrincipal</servlet-name>
        <servlet-class>com.ferreteria.controladores.ServletPrincipal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.ferreteria.controladores.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Manager</servlet-name>
        <servlet-class>com.ferreteria.controladores.Manager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerPrincipal</servlet-name>
        <servlet-class>com.ferreteria.controladores.ManagerPrincipal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPrueba</servlet-name>
        <servlet-class>com.ferreteria.controladores.ServletPrueba</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Administradores</servlet-name>
        <servlet-class>com.ferreteria.controladores.Administradores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Marcas</servlet-name>
        <servlet-class>com.ferreteria.controladores.Marcas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Categorias</servlet-name>
        <servlet-class>com.ferreteria.controladores.Categorias</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubCategorias</servlet-name>
        <servlet-class>com.ferreteria.controladores.SubCategorias</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Productos</servlet-name>
        <servlet-class>com.ferreteria.controladores.Productos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPrincipal</servlet-name>
        <url-pattern>/ServletPrincipal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Manager</servlet-name>
        <url-pattern>/Manager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerPrincipal</servlet-name>
        <url-pattern>/ManagerPrincipal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPrueba</servlet-name>
        <url-pattern>/ServletPrueba</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Administradores</servlet-name>
        <url-pattern>/Administradores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Marcas</servlet-name>
        <url-pattern>/Marcas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Categorias</servlet-name>
        <url-pattern>/Categorias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubCategorias</servlet-name>
        <url-pattern>/SubCategorias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Productos</servlet-name>
        <url-pattern>/Productos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            ServletPrincipal
        </welcome-file>
    </welcome-file-list>
</web-app>
